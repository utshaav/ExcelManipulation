@model Employee

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Update Employee</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div id="modal-content" class="m-b-10">
        <div class="container">
            <div class="container p-10">
                <form asp-controller="Employee" asp-action="Update" method="post">
                    <div asp-validation-summary="ModelOnly">
                        <span class="text-danger">Please correct the following errors</span>
                    </div>
                    <input asp-for="Id" type="hidden"/>
                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" type="text" class="form-control" placeholder="Utsav Kuinkel">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Designation"></label>
                        <input type="text" class="form-control" asp-for="Designation" >
                        <span asp-validation-for="Designation"></span>
                        @* <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small>
                        *@
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender"></label>
                        <input type="text" asp-for="Gender" class="form-control" placeholder="Gender">
                        <span asp-validation-for="Gender"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfBirth"></label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="04/04/2022">
                    </div>
                     <div class="form-group">
                        <label asp-for="Salary"></label>
                        <input asp-for="Salary" type="number" class="form-control" placeholder="20000">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>

                    <button type="button" class="btn btn-secondary" data-dismiss="modal" asp-controller="Employee"
                        asp-action="Index">Close</button>

                </form>
            </div>
        </div>
        <div class="modal-footer">
            @* <button type="submit" class="btn btn-primary">Save changes</button> *@
        </div>
    </div>
</div>