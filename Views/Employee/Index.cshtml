@{
  ViewData["Title"] = "Employee";
  int i = 0;
}
@model List<Employee>

<div style="height:20px; width:100%; clear:both;"></div>


<div class="container">
  <div class="row justify-content-between">
    <h3>List of Employee (@ViewBag.Count)</h3>
    <div class="col-md-6">
        <button type="button" class="btn btn-primary w-100 m-b-10" id="add-btn">
      Add Employee
    </button>
    </div>
<div class="col-md-6 ">
<button type="button" class="btn btn-success w-100 m-b-10" id="add-btn">
      Import Excel or CSV
    </button>
</div>
    
  </div>
</div>

<div style="height:30px; width:100%; clear:both;"></div>

<table class="table table-hover m-t-20">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Gender</th>
      <th scope="col">Designation</th>
      <th scope="col">Salary</th>
      <th scope="col">Date Of Birth</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>

    @foreach (var item in Model)
    {
      i++;
      <tr>
        <th scope="row" onclick="viewDetail(@item.Id)">@i</th>
        <td onclick="viewDetail(@item.Id)">@item.FullName</td>
        <td onclick="viewDetail(@item.Id)">@item.Gender</td>
        <td onclick="viewDetail(@item.Id)">@item.Designation</td>
        <td onclick="viewDetail(@item.Id)">@item.Salary</td>
        <td onclick="viewDetail(@item.Id)">@item.DateOfBirth</td>
        <td scope="row">
          <button style="width: 90px;" type="button" class="btn btn-primary" id="edit-btn" onclick="updateEmployee(@item.Id.ToString())">
            Edit
          </button>
          <button style="width: 90px;" type="button" class="btn btn-danger" onclick="deleteEmployee(@item.Id.ToString())" data-toggle="modal" data-target="#DeleteModal">
            Delete
          </button>
        </td>
      </tr>
    }
  </tbody>
</table>


<script src="~/lib/jquery/dist/jquery.js"></script>
